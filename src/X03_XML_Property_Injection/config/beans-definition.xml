<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="sgtPepper" class="X03_XML_Property_Injection.soundsystem.impl.SgtPepper">
        <property name="artist" value="Sgt. Pepper's Lonely Heart Club Band"/>
        <property name="title" value="The Beatles"/>
    </bean>

    <bean id="whiteAlbum" class="X03_XML_Property_Injection.soundsystem.impl.WhiteAlbum"
          p:artist="The Beatles"
          p:title="White Album"/>

    <bean id="beatlesDiscography" class="X03_XML_Property_Injection.soundsystem.impl.BeatlesDiscography"
        p:artist="The Beatles">
          <property name="discography">
              <list>
                  <ref bean="whiteAlbum"/>
                  <ref bean="sgtPepper"/>
              </list>
          </property>
    </bean>

</beans>