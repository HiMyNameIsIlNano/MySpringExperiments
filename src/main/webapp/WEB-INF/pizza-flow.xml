<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd"
      start-state="identifyCustomer">

    <var name="order" class="com.myexperiments.pizza.domain.Order"/>

    <!--
        If the start-state is not set at the top of the flow definition (see above) the first flow state is picked up
        as the starting one.
    -->
    <subflow-state id="identifyCustomer" subflow="pizza/customer">
        <output name="customer" value="order.customer"/>
        <transition on="customerReady" to="buildOrder"/>
    </subflow-state>

    <subflow-state id="buildOrder" subflow="pizza/order">
        <input name="order" value="order"/>
        <transition on="orderCreated" to="takePayment"/>
    </subflow-state>

    <subflow-state id="takePayment" subflow="pizza/payment">
        <input name="order" value="order"/>
        <transition on="paymentTaken" to="saveOrder"/>
    </subflow-state>
    
    <action-state id="saveOrder">
        <evaluate expression="pizzaFlowActions.saveOrder(order)"/>
        <transition to="thankCustomer"></transition>
    </action-state>

    <view-state id="thankCustomer">
        <transition to="endState"/>
    </view-state>

    <end-state id="endState"/>

    <global-transitions>
        <transition on="cancel" to="endState"/>
    </global-transitions>
</flow>